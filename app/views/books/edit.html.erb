<body>
<h1>Editing Book</h1>

<box>
  <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
  <% end %>
</box>

<%= form_with model: @book do |f| %>

<viv class="field">
<div>Title</div>
<%= f.text_field :title %>

<div>Body</div>
<%= f.text_area :body %>
</div>

<div>
<%= f.submit 'Update Book' %>
</div>

<%= link_to "Show", book_path(@book.id) %>
|
<%= link_to "Back", books_path(@book.id) %>
</body>
<% end %>

